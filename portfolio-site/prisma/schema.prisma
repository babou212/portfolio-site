generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Post {
    id            Int      @id @default(autoincrement())
    title         String
    image         String
    content       String? 
    category      String 
    createdAt     DateTime @default(now())
    updatedAt     DateTime @updatedAt
    isDisplay     Boolean @default(false)
}

model User {
    id            String   @id @default(cuid())
    email         String   @unique
    password      String
}
